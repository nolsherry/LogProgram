<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:ignore="Deprecated" >

    <TextView
        android:id="@+id/c_resignation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="116dp"
        android:layout_y="12dp"
        android:text="@string/c_resignation_page"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/oil_green"
        android:textSize="32sp"
        android:textStyle="italic" />
    
    <TextView
        android:id="@+id/c_resignation_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="65dp"
        android:text="@string/c_login_email"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/c_resignation_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="116dp"
        android:text="@string/c_login_password"
        android:textColor="@color/black"
        android:textSize="25sp" />
    
    <EditText
        android:id="@+id/c_resignation_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="86dp"
        android:layout_y="113dp"
        android:ems="10"
        android:inputType="textPassword"
        android:width="260dp" />

    <EditText
        android:id="@+id/c_resignation_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="86dp"
        android:layout_y="68dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:width="260dp" />    
    
    <Button
        android:id="@+id/c_unregistration"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_x="115dp"
        android:layout_y="165dp"
        android:width="200dp"
        android:height="45dp"
        android:textSize="20sp"
        android:onClick="unregisterButton"
        android:text="@string/c_unregistration" />
    
</AbsoluteLayout>