<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/c_take_picture"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="10dp"
        android:text="@string/c_picture" />

    <Button
        android:id="@+id/c_choose_picture"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_x="198dp"
        android:layout_y="13dp"
        android:text="@string/c_choose" />

    <Button
        android:id="@+id/c_comfirm"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="452dp"
        android:text="@string/c_comfirm" />

    <Button
        android:id="@+id/c_goback"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_x="192dp"
        android:layout_y="456dp"
        android:text="@string/c_goback" />

    <ImageView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_x="0dp"
        android:layout_y="94dp"
        android:background="@color/black" />

</AbsoluteLayout>
